<%- include('partials/header') %>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <div id="formulario-pergunta" class="card">
            <div class="card-header">
                <h3>Realizar pergunta</h3>
            </div>
            <div class="card-body">
                <form method="post" action="/salvarpergunta">
                    <label for="titulo">Título</label>
                    <input type="text" id="titulo" placeholder="Título" class="form-control" name="titulo">
                    <br>
                    <label for="descricao">Descrição</label>
                    <textarea placeholder="Descreva sua pergunta aqui" id="descricao" class="form-control" name="descricao"></textarea>
                    <br>
                    <button class="btn btn-primary">Perguntar</button>
                </form>
            </div>
        </div>

    </div>
</body>
<%- include('partials/footer') %>